  emailsDelivered Int      @default(0)
  emailsOpened    Int      @default(0)
  emailsClicked   Int      @default(0)
  emailsReplied   Int      @default(0)
  emailsBounced   Int      @default(0)
  deliveryRate    Float?
  openRate        Float?
  clickRate       Float?
  responseRate    Float?
  bounceRate      Float?
  userId          String
  createdAt       DateTime @default(now())
